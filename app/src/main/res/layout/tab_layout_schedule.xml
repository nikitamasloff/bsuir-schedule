<?xml version="1.0" encoding="utf-8"?>
<com.ogaclejapan.smarttablayout.SmartTabLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/schedule_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginEnd="0dp"
    android:layout_marginStart="0dp"
    android:clipToPadding="false"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"

    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintStart_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:stl_defaultTabTextColor="@color/colorMGray"
    app:stl_defaultTabTextHorizontalPadding="18dp"
    app:stl_defaultTabTextSize="15sp"
    app:stl_dividerColor="#00000000"
    app:stl_dividerThickness="0dp"
    app:stl_indicatorColor="@color/colorLGray"
    app:stl_indicatorCornerRadius="20dp"
    app:stl_indicatorGravity="center"
    app:stl_indicatorInterpolation="smart"
    app:stl_indicatorThickness="35dp"
    app:stl_titleOffset="auto_center"
    app:stl_underlineColor="#00000000"
    app:stl_underlineThickness="0dp"

    />